{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/api/userprofiles/{**catch-all}"
        }
      },
      "profileRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/profile/{**catch-all}"
        }
      },
      "matchmakingRoute": {
        "ClusterId": "matchmakingCluster",
        "Match": {
          "Path": "/api/matchmaking/{**catch-all}"
        }
      },
      "swipeRoute": {
        "ClusterId": "swipeCluster",
        "Match": {
          "Path": "/api/swipes/{**catch-all}"
        },
        "Metadata": {
          "RateLimitPolicy": "SwipesPerMinute"
        }
      },
      "photoRoute": {
        "ClusterId": "photoCluster",
        "Match": {
          "Path": "/api/photos/{**catch-all}"
        }
      },
      "messagingRoute": {
        "ClusterId": "messagingCluster",
        "Match": {
          "Path": "/api/messages/{**catch-all}"
        }
      },
      "messagingHubRoute": {
        "ClusterId": "messagingCluster",
        "Match": {
          "Path": "/messagingHub/{**catch-all}"
        },
        "Metadata": {
          "Transport": "websocket"
        }
      },
      "matchmakingHubRoute": {
        "ClusterId": "matchmakingCluster",
        "Match": {
          "Path": "/hubs/matchmaking/{**catch-all}"
        },
        "Metadata": {
          "Transport": "websocket"
        }
      },
      "safetyRoute": {
        "ClusterId": "safetyCluster",
        "Match": {
          "Path": "/api/safety/{**catch-all}"
        },
        "Metadata": {
          "RateLimitPolicy": "SafetyReportsDaily"
        }
      },
      "healthRoute": {
        "ClusterId": "healthCluster",
        "Match": {
          "Path": "/health/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "userService": {
            "Address": "http://localhost:8082/"
          }
        }
      },
      "matchmakingCluster": {
        "Destinations": {
          "matchmakingService": {
            "Address": "http://localhost:8083/"
          }
        }
      },
      "photoCluster": {
        "Destinations": {
          "photoService": {
            "Address": "http://localhost:8085/"
          }
        }
      },
      "messagingCluster": {
        "Destinations": {
          "messagingService": {
            "Address": "http://localhost:8086/"
          }
        }
      },
      "swipeCluster": {
        "Destinations": {
          "swipeService": {
            "Address": "http://localhost:8087/"
          }
        }
      },
      "safetyCluster": {
        "Destinations": {
          "safetyService": {
            "Address": "http://localhost:8088/"
          }
        }
      },
      "healthCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "userService": {
            "Address": "http://localhost:8082/"
          },
          "matchmakingService": {
            "Address": "http://localhost:8083/"
          },
          "photoService": {
            "Address": "http://localhost:8085/"
          },
          "messagingService": {
            "Address": "http://localhost:8086/"
          },
          "swipeService": {
            "Address": "http://localhost:8087/"
          },
          "safetyService": {
            "Address": "http://localhost:8088/"
          }
        }
      }
    }
  },
  "Authentication": {
    "Keycloak": {
      "Authority": "http://localhost:8090/realms/DatingApp",
      "Audience": "yarp-gateway",
      "Audiences": [
        "yarp-gateway",
        "matchmaking-service",
        "photo-service",
        "messaging-service",
        "swipe-service",
        "safety-service"
      ],
      "RequireHttpsMetadata": false
    }
  }
}
